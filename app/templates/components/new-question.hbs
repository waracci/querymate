{{#if addNewQuestion}}
<div class="text-center">
<div class="page-header pad">
<h3>Welcome to querymate questions:</h3>
<h4>Ask a question</h4>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
<div>
    <form>
        <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id='author' class='form-control'}}
        </div>
        <div class="form-group">
            <label for="quiz">Question</label>
            {{input value=quiz id='quiz' class='form-control'}}
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            {{textarea value=content id='content' class='form-control'}}
        </div>
        <div class="form-group">
            <label for="additionalContent">AdditionalContent</label>
            {{textarea value=additionalContent id='additionalContent' class='form-control'}}
        </div>
        <button {{action 'saveQuestion1'}} class='btn btn-success btn-block'>Post this question to querymate</button>
    </form>
</div>
    </div>
</div>

</div>
{{else}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
<button {{action 'questionFormShow'}} class="btn btn-success btn-block">Ask a new question</button>
    </div>
</div>
{{/if}}