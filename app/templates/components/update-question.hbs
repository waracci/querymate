{{#if updateQuestionForm}}
<div class="pad">
    <div class="page-header text-center">
        <h2>Welcome to querymate update form</h2>
        <h4>Update {{question.author}}'s question</h4>
    </div>
</div>

<div class="row">
<div class="col-md-6 col-md-offset-3">
    <form>
        <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id='author' placeholder=question.author class='form-control'}}
        </div>
        <div class="form-group">
            <label for="quiz">Question</label>
            {{input value=quiz id='quiz' placeholder=question.quiz class='form-control'}}
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            {{textarea value=content id='content' placeholder=question.content class='form-control'}}
        </div>
        <div class="form-group">
            <label for="additionalContent">AdditionalContent</label>
            {{textarea value=additionalContent id='additionalContent' placeholder=question.additionalContent class='form-control'}}
        </div>
        <button {{action 'update' question}} >update question</button>
    </form>
</div>
</div>
{{else}}
<div class="page-header">
    <button {{action 'updateQuestionForm'}} class="btn btn-warning">Update this question</button>
</div>
{{/if}}