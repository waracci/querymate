{{#if addNewAnswer}}
<div class="pad text-center">
    <h4>Respond to the question</h4>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form>
            <div class="form-group">
                <label for="">Author</label>
                {{input value=author id="author" class='form-control'}}
            </div>
            <div class="form-group">
                <label for="">subject</label>
                {{input value=subject id="subject" class='form-control'}}
            </div>
            <div class="form-group">
                <label for="">content</label>
                {{input value=content id="content" class='form-control'}}
            </div>
            <button {{action 'saveAnswer'}} >Answer</button>
        </form>
    </div>
</div>
    {{else}}
    <hr>
    <div class="row">
        <div class="col-md-12">
    <button {{action 'answerFormShow'}} class="btn btn-success btn-block">  New Answer</button>
        </div>
    </div>
{{/if}}